/** ====== image ====== **/

// 独立成行的全宽图片
article img.primary {
    max-width: 600px;
    height: auto;
    border-radius: 4px;
    box-shadow: 0px 0px 5px 0px #000000;
    transition: 0.2s;
}

@media only screen and (max-width: 600px) {
    article img.primary {
        max-width: 100%;
    }
}

article img.primary:hover {
    border-radius: 0px;
    box-shadow: 0px 0px 10px 0px #000000;
}



// 图片标题
article figcaption.primary {
    font-size: 0.9rem;
    margin: auto;
    width: 600px;
    text-align: center;
    padding-bottom: 24px;
}

@media only screen and (max-width: 600px) {
    article figcaption.primary {
        width: 100%;
    }
}
/** ===== Links ===== **/

// 独立成行的重要链接
.doc-link {
    background-color: #EDEDED;
    border: #000 1px solid;
    padding: 4px;
    font-size: 0.8rem;
}

/** ===== Text ===== **/
article p.sidenote {
    position: absolute;
    width: 180px;
    font-size: 0.8rem;
    right: -192px;
    margin: 0px;
    padding-top: 0.5rem; 
    padding-left: 0.75rem;
}

@media only screen and (max-width: 1200px) {
    article p.sidenote {
        position: relative;
        width: 100%;
        right: 0px;
    }

    article p.sidenote:after {
        z-index : -1;
        content: "↙";
        text-align: center;
        position: absolute;
        font-size: 1.25rem;
        margin: 0.5rem 0 0 -1rem;
        background-color: #EDEDED;
        width: 2rem;
        height: 1.75rem;
    }
}

@media only screen and (min-width: 1201px) {

    article p.sidenote:before {
        z-index : -1;
        content: "*";
        text-align: center;
        position: absolute;
        font-size: 1.25rem;
        margin: -1rem 0 0 -1.25rem;
        background-color: #EDEDED;
        width: 1.75rem;
        height: 1.75rem;
        font-weight: bold;
        line-height: 1.5;
    }
    
    article p.sidenote.tldr:before {
        content: "TL;DR";
        font-size: 1rem;
        width: 3.25rem;
        margin: -1.25rem 0 0 -1.25rem;
    }
}

