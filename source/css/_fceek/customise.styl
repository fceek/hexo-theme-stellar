/** ====== image ====== **/

// 独立成行的全宽图片
article img.primary {
    max-width: 600px;
    height: auto;
    border-radius: 4px;
    box-shadow: 0px 0px 5px 0px #000000;
    transition: 0.2s;
}

@media only screen and (max-width: 600px) {
    article img.primary {
        max-width: 100%;
    }
}

article img.primary:hover {
    border-radius: 0px;
    box-shadow: 0px 0px 10px 0px #000000;
}



// 图片标题
article figcaption.primary {
    font-size: 0.9rem;
    margin: auto;
    width: 600px;
    text-align: center;
    padding-bottom: 24px;
}

@media only screen and (max-width: 600px) {
    article figcaption.primary {
        width: 100%;
    }
}
/** ===== Links ===== **/

// 独立成行的重要链接
.doc-link {
    background-color: #EDEDED;
    border: #000 1px solid;
    padding: 4px;
    font-size: 0.8rem;
}

// 通往独立页面的卡片链接
.more-card-link {
    text-decoration: none;
    color: #000;
    display: block;
    margin: 2rem 0;
    border-radius: 0.5rem;
    width: 360px;
    max-width: 100%;
}

.more-card-link:hover {
    color: #000;
    transition: 0.2s;
    border-left: 0.5rem solid #1bcdfc;
    }

.more-card-link .more-card {
    background-color: #fff; 
    display: flex;
    width: 360px;
    padding: 1rem;
    border-radius: 0.5rem;
    justify-content: space-between;
    align-items: flex-start;
    flex-direction: column;
    max-width: 100%;
    box-shadow: 0 0 3px -1px #818181;
    background-size: auto 100%; //这样如果以后要加图标的话可以设置background-image
    background-repeat: no-repeat;
    background-position: right;
    }

.more-card-link .more-card:hover {
    box-shadow:  0 0 3px -1px #1bcdfc;
    border-radius: 0 0.5rem 0.5rem 0;
    padding-right: 0.5rem;
    transition: 0.2s;
    }

.more-card-link .more-card p {
    margin: 0;
    }

.more-card-link .more-card-title {
    font-weight: 500;
    font-size: 0.875rem;
    }

.more-card-link .more-card-desc {
    font-size: 0.75rem;
    color: #818181;
    }

/** ===== Text ===== **/
article p.sidenote {
    position: absolute;
    width: 180px;
    font-size: 0.8rem;
    right: -192px;
    margin: 0px;
    padding-top: 0.5rem; 
    padding-left: 0.75rem;
}

// 边注
@media only screen and (max-width: 1200px) {
    article p.sidenote {
        position: relative;
        width: 100%;
        right: 0px;
    }

    article p.sidenote:after {
        z-index : -1;
        content: "↙";
        text-align: center;
        position: absolute;
        font-size: 1.25rem;
        margin: 0.5rem 0 0 -1rem;
        background-color: #EDEDED;
        width: 2rem;
        height: 1.75rem;
    }
}

@media only screen and (min-width: 1201px) {

    article p.sidenote:before {
        z-index : -1;
        content: "*";
        text-align: center;
        position: absolute;
        font-size: 1.25rem;
        margin: -1rem 0 0 -1.25rem;
        background-color: #EDEDED;
        width: 1.75rem;
        height: 1.75rem;
        font-weight: bold;
        line-height: 1.5;
    }
    
    article p.sidenote.tldr:before {
        content: "TL;DR";
        font-size: 1rem;
        width: 3.25rem;
        margin: -1.25rem 0 0 -1.25rem;
    }
}

/* ===== TimeLine ===== */

// Used in mood board
article a.moodboard-link {
    display: block;
    color: #000;
    font-style: italic;
}

article a.moodboard-link:hover {
    padding-left: 1.4rem;
    transition: 0.2s; 
}

article a.moodboard-link:hover:before {
  content: '\25B6';
  position: absolute;
  width: 1rem;
  height: 64px;
  color: #c20c0c;
  margin: 64px 0 0 -1.6rem;
  font-style: normal;
  font-size: 1.2rem;
}

article img.moodboard-img {
    width: 128px;
    height: auto;
    margin: 4px 0 0.5rem 0;
}

/* ===== Sidebar Widgets ===== */

// Markdown vertical nav list
#markdown div.widget-body a {
    display: block;
    color: #03c7fa;
    font-weight: 500;
    font-size: 0.8125rem;
    padding-left: 0.75rem;
    margin: 0.75rem 0;
    border-left: 2px solid #ebebeb;
}

#markdown div.widget-body a:hover {
    text-decoration: none;
    color: #ff5722;
}

/* ===== Misc =====*/
blockquote {
    font-size: 16px;
}

tbody {
    font-size: 12px;
}

.ref-link {
    font-size: 14px;
}